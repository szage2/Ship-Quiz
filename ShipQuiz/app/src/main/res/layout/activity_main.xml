               android:text="@string/question_8"
               style="@style/QuestionText_Style"/>

           <RadioGroup
               android:id="@+id/radioGroup8"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical" >
               <RadioButton
                   android:id="@+id/question_8_option_a"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/question_8_option_a"
                   android:textAppearance="?android:textAppearanceMedium"
                   style="@style/Options_Style"/>
               <RadioButton
                   android:id="@+id/question_8_option_b"
                   android:layout_width="wrap_content"
