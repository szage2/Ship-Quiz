           <CheckBox
               android:id="@+id/question_5_option_c"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/question_5_option_c"
               style="@style/Options_Style"/>

           <CheckBox
               android:id="@+id/question_5_option_d"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/question_5_option_d"
               style="@style/Options_Style"/>

